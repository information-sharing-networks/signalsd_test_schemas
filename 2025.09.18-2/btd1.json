{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "signals"
  ],
  "properties": {
    "signals": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "content"
        ],
        "properties": {
          "content": {
            "type": "object",
            "required": [
              "name",
              "summary",
              "category",
              "payload"
            ],
            "properties": {
              "h": {
                "type": "string"
              },
              "name": {
                "type": "string"
              },
              "start": {
                "type": "string"
              },
              "summary": {
                "type": "string"
              },
              "category": {
                "type": "array",
                "items": {
                  "type": "string"
                },
                "minItems": 1
              },
              "payload": {
                "oneOf": [
                  {
                    "title": "Pre-notification payload",
                    "type": "object",
                    "required": [
                      "cnCodes",
                      "commodityDescription",
                      "countryOfOrigin",
                      "exporterEORI",
                      "importerEORI",
                      "location",
                      "mode"
                    ],
                    "properties": {
                      "chedNumbers": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "minItems": 1
                      },
                      "cnCodes": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "minItems": 1
                      },
                      "commodityDescription": {
                        "type": "string"
                      },
                      "countryOfOrigin": {
                        "type": "string"
                      },
                      "exporterEORI": {
                        "type": "string"
                      },
                      "importerEORI": {
                        "type": "string"
                      },
                      "location": {
                        "type": "string"
                      },
                      "mode": {
                        "type": "string"
                      },
                      "transportMeans": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "required": [
                            "transportMovementType",
                            "identifier"
                          ],
                          "properties": {
                            "transportMovementType": {
                              "type": "string"
                            },
                            "identifier": {
                              "type": "string",
                              "description": "e.g. container number or trailer number"
                            },
                            "affixedSeal": {
                              "type": "string"
                            }
                          },
                          "additionalProperties": false
                        },
                        "minItems": 1
                      },
                      "sealNumbers": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        },
                        "minItems": 1
                      }
                    },
                    "additionalProperties": false
                  },
                  {
                    "title": "Despatch payload",
                    "type": "object",
                    "required": [
                      "plannedDepartureTime",
                      "portOfExit",
                      "portOfEntry"
                    ],
                    "properties": {
                      "destinationPlant": {
                        "type": "string"
                      },
                      "plannedDepartureTime": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "actualDepartureTime": {
                        "type": "string",
                        "format": "date-time"
                      },
                      "portOfExit": {
                        "type": "string"
                      },
                      "portOfEntry": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  }
                ]
              }
            },
            "additionalProperties": false
          },
          "localref": {
            "type": "string"
          },
          "correlationid": {
            "type": "string",
            "format": "uuid"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
